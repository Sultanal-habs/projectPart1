@page
@model AddArtistModel
@{
    ViewData["Title"] = "Add Artist";
}
<div class="row justify-content-center">
    <div class="col-md-8">
        <h3 class="mb-4">Add Artist</h3>
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <div class="mb-3">
                <label asp-for="NewArtist.Name" class="form-label">Full Name *</label>
                <input asp-for="NewArtist.Name" class="form-control" />
                <span asp-validation-for="NewArtist.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="NewArtist.Email" class="form-label">Email *</label>
                <input asp-for="NewArtist.Email" type="email" class="form-control" />
                <span asp-validation-for="NewArtist.Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="NewArtist.Phone" class="form-label">Phone Number</label>
                <input asp-for="NewArtist.Phone" class="form-control" placeholder="+968 9123 4567" />
                <span asp-validation-for="NewArtist.Phone" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="NewArtist.Bio" class="form-label">Biography *</label>
                <textarea asp-for="NewArtist.Bio" class="form-control" rows="4"></textarea>
                <span asp-validation-for="NewArtist.Bio" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ProfileImageFile" class="form-label">Profile Image *</label>
                <input asp-for="ProfileImageFile" type="file" class="form-control" accept="image/*" />
                <span asp-validation-for="ProfileImageFile" class="text-danger"></span>
                <small class="form-text text-muted">Supported formats: JPG, PNG, GIF (Max 5MB)</small>
            </div>
            <div class="d-flex gap-2">
                <a asp-page="/Artists" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">Add</button>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
