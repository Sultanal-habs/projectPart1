@page
@model AddArtworkModel
@{
    ViewData["Title"] = "Add New Artwork";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h2 class="mb-0">
                        <i class="bi bi-plus-circle"></i> Add New Artwork
                    </h2>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Title -->
                        <div class="mb-3">
                            <label asp-for="NewArtwork.Title" class="form-label">
                                <i class="bi bi-card-heading"></i> Artwork Title *
                            </label>
                            <input asp-for="NewArtwork.Title" class="form-control" placeholder="Enter artwork title" required />
                            <span asp-validation-for="NewArtwork.Title" class="text-danger"></span>
                        </div>

                        <!-- Description -->
                        <div class="mb-3">
                            <label asp-for="NewArtwork.Description" class="form-label">
                                <i class="bi bi-textarea-t"></i> Description *
                            </label>
                            <textarea asp-for="NewArtwork.Description" class="form-control" rows="4" placeholder="Describe your artwork..." required></textarea>
                            <span asp-validation-for="NewArtwork.Description" class="text-danger"></span>
                        </div>

                        <!-- Artist Selection (NEW - from database) -->
                        <div class="mb-3">
                            <label asp-for="NewArtwork.ArtistId" class="form-label">
                                <i class="bi bi-person"></i> Select Artist *
                            </label>
                            <select asp-for="NewArtwork.ArtistId" class="form-select" required>
                                <option value="">-- Choose an Artist --</option>
                                @foreach (var artist in Model.AvailableArtists)
                                {
                                    <option value="@artist.Id">@artist.Name (@artist.Email)</option>
                                }
                            </select>
                            <span asp-validation-for="NewArtwork.ArtistId" class="text-danger"></span>
                            <small class="text-muted">Artists are loaded from database</small>
                        </div>

                        <!-- Artwork Type -->
                        <div class="mb-3">
                            <label asp-for="NewArtwork.Type" class="form-label">
                                <i class="bi bi-palette"></i> Artwork Type *
                            </label>
                            <select asp-for="NewArtwork.Type" class="form-select" required>
                                <option value="">-- Select Type --</option>
                                <option value="0">Painting</option>
                                <option value="1">Photography</option>
                                <option value="2">Handmade Craft</option>
                                <option value="3">Sculpture</option>
                                <option value="4">Digital Art</option>
                            </select>
                            <span asp-validation-for="NewArtwork.Type" class="text-danger"></span>
                        </div>

                        <!-- Image Upload -->
                        <div class="mb-3">
                            <label asp-for="ImageFile" class="form-label">
                                <i class="bi bi-image"></i> Upload Image
                            </label>
                            <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                            <small class="text-muted">Allowed: JPG, JPEG, PNG, GIF (Max 5MB)</small>
                        </div>

                        <!-- Price and Sale Status -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="NewArtwork.Price" class="form-label">
                                    <i class="bi bi-currency-exchange"></i> Price (OMR)
                                </label>
                                <input asp-for="NewArtwork.Price" type="number" step="0.01" min="0" max="999999" class="form-control" placeholder="0.00" />
                                <span asp-validation-for="NewArtwork.Price" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label d-block">&nbsp;</label>
                                <div class="form-check">
                                    <input asp-for="NewArtwork.IsForSale" type="checkbox" class="form-check-input" />
                                    <label asp-for="NewArtwork.IsForSale" class="form-check-label">
                                        Available for Sale
                                    </label>
                                </div>
                            </div>
                        </div>

                        <!-- Submit Buttons -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a href="/Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Add Artwork
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="alert alert-info mt-3">
                <i class="bi bi-info-circle"></i> 
                <strong>Note:</strong> All fields marked with * are required. The artwork will be saved directly to the SQL Server database.
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

