@page
@model projectPart1.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card shadow-lg">
                <div class="card-header bg-success text-white text-center">
                    <h2 class="mb-0">
                        <i class="bi bi-person-plus"></i> Create New Account
                    </h2>
                </div>
                <div class="card-body p-4">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="NewUser.Username" class="form-label">
                                    <i class="bi bi-person"></i> Username *
                                </label>
                                <input asp-for="NewUser.Username" class="form-control" placeholder="Choose username" required autofocus />
                                <span asp-validation-for="NewUser.Username" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="NewUser.FullName" class="form-label">
                                    <i class="bi bi-person-badge"></i> Full Name *
                                </label>
                                <input asp-for="NewUser.FullName" class="form-control" placeholder="Enter full name" required />
                                <span asp-validation-for="NewUser.FullName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="NewUser.Email" class="form-label">
                                    <i class="bi bi-envelope"></i> Email *
                                </label>
                                <input asp-for="NewUser.Email" type="email" class="form-control" placeholder="email@example.com" required />
                                <span asp-validation-for="NewUser.Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="NewUser.PhoneNumber" class="form-label">
                                    <i class="bi bi-telephone"></i> Phone Number
                                </label>
                                <input asp-for="NewUser.PhoneNumber" type="tel" class="form-control" placeholder="+96891234567" pattern="^\+968\d{8}$" />
                                <span asp-validation-for="NewUser.PhoneNumber" class="text-danger"></span>
                                <small class="text-muted">Format: +968XXXXXXXX</small>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="NewUser.PasswordHash" class="form-label">
                                    <i class="bi bi-lock"></i> Password *
                                </label>
                                <input asp-for="NewUser.PasswordHash" type="password" class="form-control" placeholder="Enter password" required />
                                <span asp-validation-for="NewUser.PasswordHash" class="text-danger"></span>
                                <small class="text-muted">Min 6 characters</small>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ConfirmPassword" class="form-label">
                                    <i class="bi bi-lock-fill"></i> Confirm Password *
                                </label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm password" required />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-shield-check"></i> I am registering as:
                            </label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="NewUser.UserRole" value="User" id="roleUser" checked>
                                <label class="form-check-label" for="roleUser">
                                    Regular User (Browse & Like Artworks)
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="NewUser.UserRole" value="Artist" id="roleArtist">
                                <label class="form-check-label" for="roleArtist">
                                    Artist (Upload & Manage Artworks)
                                </label>
                            </div>
                        </div>
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="termsCheck" required>
                            <label class="form-check-label" for="termsCheck">
                                I agree to the <a href="#" class="text-decoration-none">Terms and Conditions</a>
                            </label>
                        </div>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="/Account/Login" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Login
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-person-plus"></i> Register
                            </button>
                        </div>
                    </form>
                    <hr class="my-4" />
                    <div class="text-center">
                        <p class="mb-0">
                            Already have an account? 
                            <a href="/Account/Login" class="text-decoration-none">
                                Login here
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}