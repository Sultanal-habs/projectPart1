@page "{id:int}"
@model ArtworkDetailsModel
@{
    ViewData["Title"] = Model.Artwork?.Title ?? "Artwork Details";
}

<div class="container mt-4">
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Artwork == null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle"></i> Artwork not found
        </div>
        <a href="/Index" class="btn btn-secondary">Back to Gallery</a>
    }
    else
    {
        <div class="row">
            <!-- Main Artwork Display -->
            <div class="col-lg-8">
                <div class="card shadow-sm mb-4">
                    <img src="@Model.Artwork.ImageUrl" class="card-img-top" alt="@Model.Artwork.Title" 
                         style="max-height: 600px; object-fit: contain; background-color: #f8f9fa;">
                    
                    <div class="card-body">
                        <h2 class="card-title">@Model.Artwork.Title</h2>
                        
                        <div class="mb-3">
                            <span class="badge bg-info">@Model.Artwork.Type</span>
                            <span class="badge bg-danger ms-2">
                                <i class="bi bi-heart-fill"></i> @Model.Artwork.Likes likes
                            </span>
                            <span class="badge bg-success ms-2">@Model.Artwork.Status</span>
                            @if (Model.Artwork.IsNew())
                            {
                                <span class="badge bg-warning text-dark ms-2">
                                    <i class="bi bi-star-fill"></i> New
                                </span>
                            }
                        </div>

                        <h5><i class="bi bi-info-circle"></i> Description</h5>
                        <p class="card-text">@Model.Artwork.Description</p>

                        @if (Model.Artwork.IsForSale && Model.Artwork.Price > 0)
                        {
                            <div class="alert alert-success">
                                <h5 class="mb-0">
                                    <i class="bi bi-currency-exchange"></i> 
                                    Price: @Model.Artwork.Price.ToString("N2") OMR
                                </h5>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-secondary">
                                <i class="bi bi-info-circle"></i> Not for sale
                            </div>
                        }

                        <!-- Action Buttons -->
                        <div class="d-flex gap-2 mt-4">
                            <form method="post" asp-page-handler="Like" class="d-inline">
                                <input type="hidden" name="id" value="@Model.Artwork.Id" />
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-heart-fill"></i> Like This Artwork
                                </button>
                            </form>

                            <a href="/EditArtwork/@Model.Artwork.Id" class="btn btn-warning">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>

                            <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </div>
                    </div>

                    <div class="card-footer text-muted">
                        <small>
                            <i class="bi bi-calendar"></i> Posted: @Model.Artwork.CreatedDate.ToString("MMMM dd, yyyy")
                        </small>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Artist Information -->
                @if (Model.Artist != null)
                {
                    <div class="card shadow-sm mb-3">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                <i class="bi bi-person-circle"></i> About the Artist
                            </h5>
                        </div>
                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(Model.Artist.ProfileImageUrl))
                            {
                                <div class="text-center mb-3">
                                    <img src="@Model.Artist.ProfileImageUrl" alt="@Model.Artist.Name" 
                                         class="rounded-circle" style="width: 100px; height: 100px; object-fit: cover;">
                                </div>
                            }
                            
                            <h6 class="text-center">@Model.Artist.Name</h6>
                            
                            @if (!string.IsNullOrEmpty(Model.Artist.Bio))
                            {
                                <p class="small text-muted">@Model.Artist.Bio</p>
                            }

                            <hr />

                            <p class="mb-2">
                                <i class="bi bi-envelope"></i> 
                                <a href="mailto:@Model.Artist.Email">@Model.Artist.Email</a>
                            </p>
                            
                            @if (!string.IsNullOrEmpty(Model.Artist.Phone))
                            {
                                <p class="mb-2">
                                    <i class="bi bi-telephone"></i> 
                                    <a href="tel:@Model.Artist.Phone">@Model.Artist.Phone</a>
                                </p>
                            }
                        </div>
                    </div>
                }

                <!-- Current Exhibition -->
                @if (Model.CurrentExhibition != null)
                {
                    <div class="card shadow-sm">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">
                                <i class="bi bi-calendar-event"></i> Currently Exhibiting
                            </h5>
                        </div>
                        <div class="card-body">
                            <h6>@Model.CurrentExhibition.Name</h6>
                            <p class="mb-1">
                                <i class="bi bi-geo-alt"></i> @Model.CurrentExhibition.Location
                            </p>
                            <p class="small text-muted">
                                @Model.CurrentExhibition.StartDate.ToString("MMM dd") - 
                                @Model.CurrentExhibition.EndDate.ToString("MMM dd, yyyy")
                            </p>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Navigation -->
        <div class="mt-4">
            <a asp-page="/Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Gallery
            </a>
        </div>
    }
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="bi bi-exclamation-triangle"></i> Confirm Delete
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this artwork?</p>
                <p class="fw-bold">@Model.Artwork?.Title</p>
                <p class="text-danger small">
                    <i class="bi bi-exclamation-circle"></i> This action cannot be undone.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" asp-page-handler="Delete" class="d-inline">
                    <input type="hidden" name="id" value="@Model.Artwork?.Id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete Artwork
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
