@page
@model ArtworkDetailsModel
@{
    ViewData["Title"] = Model.Artwork?.Title ?? "Artwork Details";
}

@if (Model.Artwork == null)
{
    <div class="alert alert-danger">Artwork not found</div>
}
else
{
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <img src="@Model.Artwork.ImageUrl" class="card-img-top" alt="@Model.Artwork.Title" style="max-height: 500px; object-fit: contain;">
                <div class="card-body">
                    <h2>@Model.Artwork.Title</h2>
                    <p class="text-muted">Artist: @Model.Artwork.ArtistName</p>
                    
                    <div class="mb-3">
                        <span class="badge bg-info">@Model.Artwork.Type</span>
                        <span class="badge bg-danger ms-2">@Model.Artwork.Likes likes</span>
                    </div>

                    <h5>Description</h5>
                    <p>@Model.Artwork.Description</p>

                    <form method="post" class="mt-3">
                        <input type="hidden" name="id" value="@Model.Artwork.Id" />
                        <button type="submit" asp-page-handler="Like" class="btn btn-danger">
                            Like
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Contact Artist</h5>
                </div>
                <div class="card-body">
                    <h6>@Model.Artwork.ArtistName</h6>
                    <p class="mb-2">
                        <strong>Email:</strong><br />
                        <a href="mailto:@Model.Artwork.ArtistEmail">@Model.Artwork.ArtistEmail</a>
                    </p>
                    <p class="mb-3">
                        <strong>Phone:</strong><br />
                        <a href="tel:@Model.Artwork.ArtistPhone">@Model.Artwork.ArtistPhone</a>
                    </p>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-body">
                    <p class="text-muted mb-0">
                        <small>Posted: @Model.Artwork.CreatedDate.ToString("MM/dd/yyyy")</small>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a asp-page="/Index" class="btn btn-secondary">Back to Gallery</a>
    </div>
}
