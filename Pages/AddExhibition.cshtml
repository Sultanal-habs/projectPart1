@page
@model AddExhibitionModel
@{
    ViewData["Title"] = "Add Exhibition";
}
<div class="row justify-content-center">
    <div class="col-md-8">
        <h3 class="mb-4">Add Exhibition</h3>
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <div class="mb-3">
                <label asp-for="NewExhibition.Name" class="form-label">Exhibition Name *</label>
                <input asp-for="NewExhibition.Name" class="form-control" />
                <span asp-validation-for="NewExhibition.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="NewExhibition.Location" class="form-label">Location *</label>
                <input asp-for="NewExhibition.Location" class="form-control" />
                <span asp-validation-for="NewExhibition.Location" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="NewExhibition.Description" class="form-label">Description *</label>
                <textarea asp-for="NewExhibition.Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="NewExhibition.Description" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="NewExhibition.StartDate" class="form-label">Start Date *</label>
                        <input asp-for="NewExhibition.StartDate" type="date" class="form-control" />
                        <span asp-validation-for="NewExhibition.StartDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="NewExhibition.EndDate" class="form-label">End Date *</label>
                        <input asp-for="NewExhibition.EndDate" type="date" class="form-control" />
                        <span asp-validation-for="NewExhibition.EndDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="NewExhibition.MaxArtworks" class="form-label">Max Artworks *</label>
                <input asp-for="NewExhibition.MaxArtworks" type="number" class="form-control" />
                <span asp-validation-for="NewExhibition.MaxArtworks" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="BannerImageFile" class="form-label">Banner Image *</label>
                <input asp-for="BannerImageFile" type="file" class="form-control" accept="image/*" />
                <span asp-validation-for="BannerImageFile" class="text-danger"></span>
                <small class="form-text text-muted">Supported formats: JPG, PNG, GIF (Max 5MB)</small>
            </div>
            <div class="d-flex gap-2">
                <a asp-page="/Exhibitions" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-success">Add</button>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}