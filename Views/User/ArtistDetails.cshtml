@model Artist
@{
    ViewData["Title"] = Model.Name;
    Layout = "_UserLayout";
}

<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Artists">Artists</a></li>
            <li class="breadcrumb-item active">@Model.Name</li>
        </ol>
    </nav>

    <!-- Artist Profile Header -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-3 text-center">
                    @if (!string.IsNullOrEmpty(Model.ProfileImageUrl))
                    {
                        <img src="@Model.ProfileImageUrl" alt="@Model.Name" class="rounded-circle" style="width: 150px; height: 150px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="bg-primary rounded-circle mx-auto d-flex align-items-center justify-content-center text-white" style="width: 150px; height: 150px;">
                            <span class="display-3">@Model.Name.Substring(0, 1).ToUpper()</span>
                        </div>
                    }
                </div>
                <div class="col-md-9">
                    <h1 class="mb-2">@Model.Name</h1>
                    <p class="text-muted mb-3">
                        <i class="bi bi-calendar me-2"></i>Member since @Model.JoinedDate.ToString("MMMM yyyy")
                    </p>
                    @if (!string.IsNullOrEmpty(Model.Bio))
                    {
                        <p class="lead">@Model.Bio</p>
                    }
                    
                    <!-- Stats -->
                    <div class="d-flex gap-4 mt-3">
                        <div class="text-center">
                            <h3 class="mb-0 text-primary">@Model.GetTotalArtworks()</h3>
                            <small class="text-muted">Artworks</small>
                        </div>
                        <div class="text-center">
                            <h3 class="mb-0 text-danger">@ViewBag.TotalLikes</h3>
                            <small class="text-muted">Total Likes</small>
                        </div>
                        <div class="text-center">
                            <h3 class="mb-0 text-success">@ViewBag.ArtworksForSale</h3>
                            <small class="text-muted">For Sale</small>
                        </div>
                    </div>

                    <!-- Contact Info -->
                    @if (!string.IsNullOrEmpty(Model.Email) || !string.IsNullOrEmpty(Model.Phone))
                    {
                        <div class="mt-3 pt-3 border-top">
                            @if (!string.IsNullOrEmpty(Model.Email))
                            {
                                <span class="me-3">
                                    <i class="bi bi-envelope text-primary"></i> @Model.Email
                                </span>
                            }
                            @if (!string.IsNullOrEmpty(Model.Phone))
                            {
                                <span>
                                    <i class="bi bi-phone text-success"></i> @Model.Phone
                                </span>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Artist's Artworks -->
    <h2 class="mb-4"><i class="bi bi-images me-2"></i>Artworks by @Model.Name</h2>
    @if (Model.Artworks != null && Model.Artworks.Any())
    {
        <div class="row g-4">
            @foreach (var artwork in Model.Artworks)
            {
                <div class="col-md-4">
                    <div class="card artwork-card h-100">
                        @if (!string.IsNullOrEmpty(artwork.ImageUrl))
                        {
                            <img src="@artwork.ImageUrl" class="card-img-top" alt="@artwork.Title" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="bi bi-image text-muted display-4"></i>
                            </div>
                        }
                        <div class="card-body">
                            <h5 class="card-title">@artwork.Title</h5>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge bg-info">@artwork.Type</span>
                                <span class="text-danger">
                                    <i class="bi bi-heart-fill"></i> @artwork.Likes
                                </span>
                            </div>
                            @if (artwork.IsForSale && artwork.Price.HasValue)
                            {
                                <div class="mt-2">
                                    <strong class="text-success">@artwork.Price.Value.ToString("C") OMR</strong>
                                </div>
                            }
                        </div>
                        <div class="card-footer bg-transparent">
                            <a asp-action="ArtworkDetails" asp-route-id="@artwork.Id" class="btn btn-primary w-100">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5 bg-light rounded">
            <i class="bi bi-images display-4 text-muted"></i>
            <p class="text-muted mt-3">This artist hasn't uploaded any artworks yet.</p>
        </div>
    }
</div>
