@model List<Artwork>
@{
    ViewData["Title"] = "My Liked Artworks";
    Layout = "_UserLayout";
}

<div class="container py-4">
    <h1 class="mb-4"><i class="bi bi-heart me-2 text-danger"></i>My Liked Artworks</h1>

    @if (Model.Any())
    {
        <p class="text-muted mb-4">You have liked @Model.Count artworks</p>
        <div class="row g-4">
            @foreach (var artwork in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card artwork-card h-100">
                        @if (!string.IsNullOrEmpty(artwork.ImageUrl))
                        {
                            <img src="@artwork.ImageUrl" class="card-img-top" alt="@artwork.Title" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="bi bi-image text-muted display-4"></i>
                            </div>
                        }
                        <div class="card-body">
                            <h5 class="card-title">@artwork.Title</h5>
                            <p class="card-text small text-muted">
                                <a asp-action="ArtistDetails" asp-route-id="@artwork.ArtistId" class="text-decoration-none">
                                    <i class="bi bi-person"></i> @artwork.Artist?.Name
                                </a>
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge bg-info">@artwork.Type</span>
                                <span class="text-danger">
                                    <i class="bi bi-heart-fill"></i> @artwork.Likes
                                </span>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent d-flex gap-2">
                            <a asp-action="ArtworkDetails" asp-route-id="@artwork.Id" class="btn btn-primary flex-grow-1">
                                View
                            </a>
                            <form asp-action="UnlikeArtwork" asp-route-id="@artwork.Id" method="post">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-danger" title="Unlike">
                                    <i class="bi bi-heart-fill"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-heart display-1 text-muted"></i>
            <h3 class="mt-3">No liked artworks yet</h3>
            <p class="text-muted">Browse artworks and like your favorites to see them here.</p>
            <a asp-action="Artworks" class="btn btn-primary">Browse Artworks</a>
        </div>
    }
</div>
