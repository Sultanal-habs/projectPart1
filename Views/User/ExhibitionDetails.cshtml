@model Exhibition
@{
    ViewData["Title"] = Model.Name;
    Layout = "_UserLayout";
    var exhibitionArtworks = ViewBag.ExhibitionArtworks as List<Artwork>;
}

<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Exhibitions">Exhibitions</a></li>
            <li class="breadcrumb-item active">@Model.Name</li>
        </ol>
    </nav>

    <!-- Exhibition Header -->
    <div class="card mb-4">
        @if (!string.IsNullOrEmpty(Model.BannerImageUrl))
        {
            <img src="@Model.BannerImageUrl" class="card-img-top" alt="@Model.Name" style="height: 300px; object-fit: cover;">
        }
        else
        {
            <div class="card-img-top bg-gradient bg-primary text-white d-flex align-items-center justify-content-center" style="height: 200px;">
                <i class="bi bi-calendar-event display-1"></i>
            </div>
        }
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <div class="mb-2">
                        @if (Model.IsActive())
                        {
                            <span class="badge bg-success fs-6">Active Now</span>
                        }
                        else if (Model.IsUpcoming())
                        {
                            <span class="badge bg-info fs-6">Upcoming</span>
                        }
                        else if (Model.IsEnded())
                        {
                            <span class="badge bg-secondary fs-6">Ended</span>
                        }
                    </div>
                    <h1>@Model.Name</h1>
                    <p class="lead">@Model.Description</p>
                </div>
                <div class="col-md-4">
                    <div class="bg-light rounded p-3">
                        <h5><i class="bi bi-info-circle me-2"></i>Exhibition Details</h5>
                        <ul class="list-unstyled mb-0">
                            <li class="mb-2">
                                <i class="bi bi-calendar text-primary me-2"></i>
                                <strong>Dates:</strong><br>
                                @Model.StartDate.ToString("MMMM dd") - @Model.EndDate.ToString("MMMM dd, yyyy")
                            </li>
                            @if (!string.IsNullOrEmpty(Model.Location))
                            {
                                <li class="mb-2">
                                    <i class="bi bi-geo-alt text-danger me-2"></i>
                                    <strong>Location:</strong><br>
                                    @Model.Location
                                </li>
                            }
                            <li class="mb-2">
                                <i class="bi bi-clock text-info me-2"></i>
                                <strong>Duration:</strong><br>
                                @Model.GetTotalDays() days
                                @if (Model.IsActive() || Model.IsUpcoming())
                                {
                                    <span class="text-muted">(@Model.GetDaysRemaining() remaining)</span>
                                }
                            </li>
                            <li>
                                <i class="bi bi-images text-success me-2"></i>
                                <strong>Artworks:</strong><br>
                                @(exhibitionArtworks?.Count ?? 0) / @Model.MaxArtworks max
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Exhibition Artworks -->
    @if (exhibitionArtworks != null && exhibitionArtworks.Any())
    {
        <h2 class="mb-4"><i class="bi bi-images me-2"></i>Featured Artworks</h2>
        <div class="row g-4">
            @foreach (var artwork in exhibitionArtworks)
            {
                <div class="col-md-4 col-lg-3">
                    <div class="card artwork-card h-100">
                        @if (!string.IsNullOrEmpty(artwork.ImageUrl))
                        {
                            <img src="@artwork.ImageUrl" class="card-img-top" alt="@artwork.Title" style="height: 180px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 180px;">
                                <i class="bi bi-image text-muted display-4"></i>
                            </div>
                        }
                        <div class="card-body">
                            <h6 class="card-title">@artwork.Title</h6>
                            <small class="text-muted">by @artwork.Artist?.Name</small>
                            <div class="d-flex justify-content-between align-items-center mt-2">
                                <span class="badge bg-secondary">@artwork.Type</span>
                                <span class="text-danger small">
                                    <i class="bi bi-heart-fill"></i> @artwork.Likes
                                </span>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a asp-action="ArtworkDetails" asp-route-id="@artwork.Id" class="btn btn-sm btn-outline-primary w-100">
                                View
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5 bg-light rounded">
            <i class="bi bi-images display-4 text-muted"></i>
            <p class="text-muted mt-3">No artworks have been added to this exhibition yet.</p>
        </div>
    }
</div>
