@model Exhibition
@{
    ViewData["Title"] = "Add New Exhibition";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-warning">
                <h5 class="mb-0"><i class="bi bi-calendar-plus me-2"></i>Add New Exhibition</h5>
            </div>
            <div class="card-body">
                <form asp-action="CreateExhibition" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Exhibition Name <span class="text-danger">*</span></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter exhibition name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description <span class="text-danger">*</span></label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Describe the exhibition..." minlength="10" maxlength="1000"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                        <small class="text-muted">10-1000 characters</small>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="StartDate" class="form-label">Start Date <span class="text-danger">*</span></label>
                            <input asp-for="StartDate" class="form-control" type="date" />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="EndDate" class="form-label">End Date <span class="text-danger">*</span></label>
                            <input asp-for="EndDate" class="form-control" type="date" />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-8">
                            <label asp-for="Location" class="form-label">Location</label>
                            <input asp-for="Location" class="form-control" placeholder="e.g., National Museum of Oman" />
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="MaxArtworks" class="form-label">Max Artworks</label>
                            <input asp-for="MaxArtworks" class="form-control" type="number" min="1" max="1000" />
                            <span asp-validation-for="MaxArtworks" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-8">
                            <label asp-for="BannerImageUrl" class="form-label">Banner Image URL</label>
                            <input asp-for="BannerImageUrl" class="form-control" placeholder="https://example.com/banner.jpg" />
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Status" class="form-label">Status</label>
                            <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<ExhibitionStatus>()"></select>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Exhibitions" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-check-lg me-2"></i>Create Exhibition
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Validate end date is after start date
        document.querySelector('form').addEventListener('submit', function(e) {
            var startDate = new Date(document.getElementById('StartDate').value);
            var endDate = new Date(document.getElementById('EndDate').value);
            if (endDate <= startDate) {
                alert('End date must be after start date');
                e.preventDefault();
            }
        });
    </script>
}
